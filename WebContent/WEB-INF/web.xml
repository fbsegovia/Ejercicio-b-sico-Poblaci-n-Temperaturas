<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>EjPortlets_01</display-name>
	<servlet>
		<servlet-name>Temperaturas_Portlet</servlet-name>
		<servlet-class>org.apache.pluto.container.driver.PortletServlet</servlet-class>
		<init-param>
			<param-name>portlet-name</param-name>
			<param-value>Temperaturas_Portlet</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Temperaturas_Portlet</servlet-name>
		<url-pattern>/PlutoInvoker/Temperaturas_Portlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Poblacion_Portlet</servlet-name>
		<servlet-class>org.apache.pluto.container.driver.PortletServlet</servlet-class>
		<init-param>
			<param-name>portlet-name</param-name>
			<param-value>Poblacion_Portlet</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Poblacion_Portlet</servlet-name>
		<url-pattern>/PlutoInvoker/Poblacion_Portlet</url-pattern>
	</servlet-mapping>
</web-app>